{
  "name": "backend",
  "version": "1.0.0",
  "description": "Plateforme de partage de vidéos basée sur Node.js pour permettre aux utilisateurs de télécharger, de visionner et de partager des vidéos.",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "test": "jest --passWithNoTests --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --config=jest.config.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ystreaming/backend.git"
  },
  "author": "YStream",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ystreaming/backend/issues"
  },
  "homepage": "https://github.com/Ystreaming/backend#readme",
  "dependencies": {
    "@types/multer": "^1.4.9",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.0.1",
    "sequelize": "^6.33.0",
    "socket.io": "^4.7.2",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.3",
    "@types/bcrypt": "^5.0.1",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/yamljs": "^0.2.33",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.0"
  }
}
